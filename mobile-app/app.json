{
  "expo": {
    "name": "Smart AI",
    "slug": "seva-ai-mobile",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mindweavetech.sevaai",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app requires microphone access for voice conversations with your AI companion.",
        "NSSpeechRecognitionUsageDescription": "This app requires speech recognition to understand your voice messages."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.mindweavetech.sevaai",
      "permissions": [
        "RECORD_AUDIO",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-av"
    ],
    "extra": {
      "apiUrl": process.env.API_URL || "http://localhost:8000/api/v1"
    }
  }
}
